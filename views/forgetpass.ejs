<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login</title>
    <link rel="shortcut icon" href="/assets/images/favicon.png" type="image/x-icon">
    <link rel="preload" href="/assets/images/aot-logo.jpg" as="image">
    <link rel="stylesheet" href="/styles/forgetPass.css">
</head>

<body>
    <img src="/assets/images/aot-logo.jpg" alt="AOT" loading=" eager" decoding="async">
    <div class="login-container">
        <h2>Enter Information</h2>
        <%- include("./partials/message") -%>
            <form id="login-form" action="/studentPortal/studentlogin/forgetPassword" method="POST">
                <div class="form-group">
                    <label for="roll">Roll Number:</label>
                    <input type="number" id="roll" name="roll" placeholder="Enter your roll number" required>
                </div>
                <div class="form-group">
                    <label for="email">Personal email:</label>
                    <input type="email" name="email" id="email" placeholder="Enter your email" required>
                </div>
                <button type="submit" id="submit">Submit</button>
            </form>
    </div>
    <script>
        let inputs = document.querySelectorAll('input');
        let buttons = document.querySelectorAll('button');
        let form = document.getElementById('login-form');
        function disable(elements) {
            elements.forEach(val => {
                val.readonly = true;
            })
        }
        function enable(elements) {
            elements.forEach(val => {
                val.readonly = false;
            })
        }

        form.addEventListener('submit', e => {
            inputs.forEach(val => {
                val.readonly = true;
            })
            buttons.forEach(val => {
                val.disabled = true;
            })
        })
        window.addEventListener('load', e => {
            inputs.forEach(val => {
                val.readonly = false;
            })
            buttons.forEach(val => {
                val.disabled = false;
            })
        })
    </script>
</body>

</html>